pipeline {
    agent any
    stages {
        stage('Build') { 
            steps {
                sh './ProjectAssistant/mvnw -B -DskipTests clean package' 
            }
        }
        stage('Test') {
            steps {
                sh './ProjectAssistant/mvnw test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
    
}
